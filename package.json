  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sajjzah/mellat-loan-automation/issues"
  },
  "homepage": "https://github.com/sajjzah/mellat-loan-automation#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.14",
    "eslint": "^9.31.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "@playwright/test": "^1.54.1",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "winston": "^3.17.0"
  }
